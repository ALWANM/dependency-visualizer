{
  "name": "Dotnet Dependencies Visualizer",
  "displayName": "dv",
  "description": "it provide visualization of the dependency graph in dotnet project",
  "version": "1.0.1",
  "publisher": "MarwanAlwan",
  "repository": {
    "type": "git",
    "url": "https://github.com/ALWANM/dependency-visualizer"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:dv.rd",
    "onCommand:dv.showGraph"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "dependencyView",
          "name": "Dependency View"
        }
      ]
    },
    "commands": [
      {
        "command": "dv.rd",
        "title": "Refresh Dependencies tree view"
      },
      {
        "command": "dv.showGraph",
        "title": "Show Dependencies Graph"
      },
      {
        "command": "dv.saveDependencyGraph",
        "title": "Save dependencies graph into Html"
      },
      {
        "command": "dv.printDependencyGraph",
        "title": "Save Dependencies into pdf file"
      }
    ],
    "keybindings": [
      {
        "command": "dv.rd",
        "key": "ctrl+shift+1",
        "mac": "shift+cmd+1"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "copy-webpack-plugin": "^12.0.2",
    "eslint": "^8.57.0",
    "glob": "^11.0.0",
    "mocha": "^10.7.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "puppeteer": "^22.14.0",
    "xml2js": "^0.6.2"
  }
}
